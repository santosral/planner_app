<div class="category-form">
<%= form_with model: @category do |form| %>
  <div class='title-form'>
    <%= form.text_field :title, placeholder: "Title", style: 'width:30rem; height:2rem; border:none; border-radius: 10px; text-align:center;' %>
     <% @category.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.text_field :description, placeholder: "Description", style: 'width:30rem; height:10rem; border:none; border-radius: 10px; text-align:center;' %>
     <% @category.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <%= form.submit class: 'new-category-submit' %>
<% end %>
</div>