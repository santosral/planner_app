<%= form_with model: [ @category, @task ] do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :deadline %><br>
    <%= form.datetime_local_field :deadline %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>